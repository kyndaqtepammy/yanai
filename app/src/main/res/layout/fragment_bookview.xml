<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/scrollviewr">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:id="@+id/bookview_linear_top">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:id="@+id/custom_icons_toolbar">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/icon_arrow_back"
                    android:src="@drawable/ic_action_back"
                    android:layout_alignParentStart="true" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/icon_heart"
                    android:src="@drawable/ic_action_heart"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

        </LinearLayout>
        <!--frame -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left">
            <ImageView
                android:id="@+id/view_img_cover"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="120dp"
                android:layout_below="@+id/icon_heart"
                android:src="@drawable/curry" />
            <FrameLayout
                style="?android:attr/buttonStyle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/btn_read_more"
                android:layout_marginLeft="12dp"
                android:layout_gravity="bottom"
                android:background="@drawable/rounded_button">
                <TextView
                    style="?android:attr/buttonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:clickable="false"
                    android:drawableLeft="@android:drawable/stat_notify_more"
                    android:focusable="false"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:minWidth="0dp"/>
            </FrameLayout>
            <FrameLayout
                style="?android:attr/buttonStyle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/btn_play_audio"
                android:layout_marginLeft="12dp"
                android:layout_gravity="bottom"
                android:background="@drawable/rounded_button">
                <TextView
                    style="?android:attr/buttonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:clickable="false"
                    android:drawableLeft="@android:drawable/ic_media_play"
                    android:focusable="false"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:minWidth="0dp"/>
            </FrameLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginStart="160dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view_book_title"
                android:textColor="@color/colorWhite"
                android:text="Title"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:id="@+id/view_book_author"
                android:layout_below="@+id/view_book_title"
                android:text="John Doe"
                android:textSize="15dp"
                android:layout_gravity="center"/>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view_book_rating"
                android:theme="@style/RatingBar"
                style = "?android:attr/ratingBarStyleSmall"
                android:layout_below="@+id/view_book_author"/>
        </RelativeLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fab_download"
            android:layout_gravity="bottom|center"
            android:src="@drawable/ic_archive_black_24dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="350dp"
            android:padding="30dp"
            android:textAlignment="textStart">
            <TextView
                android:id="@+id/view_book_desr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/lorem_ipsum" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"/>
        </RelativeLayout>
    </FrameLayout>
</ScrollView>