<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/book_details"
        android:padding="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/view_img_cover"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/curry" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_book_title"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_book_author"
            android:text="John Doe"
            android:textSize="15dp"
            android:layout_gravity="center"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_book_rating"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/view_book_desr"
            android:text="@string/lorem_ipsum"/>
        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Read Now"
            android:layout_marginTop="@dimen/cardview_default_elevation"
            android:id="@+id/btn_read_more"/>
    </LinearLayout>
</ScrollView>