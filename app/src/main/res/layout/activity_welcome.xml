<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:src="@drawable/yanailogo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|right"
            android:orientation="vertical">

            <Button
                android:id="@+id/gotoLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_auth"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:text="Sign In"
                android:textAllCaps="false"
                android:textColor="@color/white" />
<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="OR"-->
<!--                android:layout_below="@+id/gotoLog"-->
<!--                android:gravity="center"-->
<!--                android:layout_above="@+id/gotoReg"-->
<!--                android:textColor="@color/av_green"-->
<!--                android:textSize="20sp"/>-->

            <Button
                android:id="@+id/gotoReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gotoLog"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/border_yanai_light_orange"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="@color/yanai_orange_light" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:adjustViewBounds="?attr/isLightTheme"
                android:src="@drawable/hippo" />
        </RelativeLayout>
</LinearLayout>